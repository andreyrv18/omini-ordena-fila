{
  "manifest_version": 3,
  "name": "Omni - Ordenador de Fila",
  "version": "2.1.1",
  "description": "Ordena atendimentos por tempo e destaca atendimentos sem interação há mais de 20 minutos.",
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://omnidixi.falehandix.com.br/*",
        "https://*.omni.com.br/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "permissions": [
    "storage"
  ]
}